        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/user_saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/marubold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#C38A8B"
                android:theme="@style/AppTheme.ButtonColor"
                android:text="저장하기" />
            <Button
                android:id="@+id/user_modiBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginBottom="20dp"
                android:textColor="#ffffff"
                android:fontFamily="@font/marubold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#C38A8B"
                android:theme="@style/AppTheme.ButtonColor"
                android:text="수정하기" />

        </FrameLayout>

        <Button
            android:id="@+id/user_delBtn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/marubold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#C38A8B"
            android:theme="@style/AppTheme.ButtonColor"
            android:text="정보 초기화" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/user_backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/marubold"
            android:background="#C38A8B"
